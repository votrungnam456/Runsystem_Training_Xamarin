<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Training_Xamarin.Views.PersonalInfomationPage">
    <ContentPage.Content>
        <StackLayout>
            <Label 
                Text="Name: "               
                />
            <Label
                x:Name="nameLabel"
                Text="{Binding Name}"
                ></Label>
            <Label 
                Text="Birthday: "               
                />
            <Label
                x:Name="birthdayLabel"
                Text="{Binding Birthday}"
                ></Label>
            <Label 
                Text="Gender: "               
                />
            <Label
                x:Name="genderLabel"
                Text="{Binding Gender}"
                ></Label>
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>