<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Training_Xamarin.Views.TabbedView.TabbedPageUsingTemplate"
            ItemsSource="{Binding .}">
  <!--Pages can be added as references or inline-->
    <TabbedPage.ItemTemplate>
        <DataTemplate>

            <ContentPage Title="{Binding Name}" IconImageSource="https://image.flaticon.com/icons/png/512/69/69524.png">
                <StackLayout Padding="5, 25">
                    <Label Text="{Binding Name, StringFormat='Customer &apos; name: {0}'}" Font="Bold,Large" HorizontalOptions="Center" />
                    <Label Text="{Binding Address, StringFormat='Address: {0}'}" Font="Bold,Large" HorizontalOptions="Center" />
                    <Label Text="{Binding PhoneNumber, StringFormat='Phone number: {0}'}" Font="Bold,Large" HorizontalOptions="Center" />
                </StackLayout>
            </ContentPage>
        </DataTemplate>
    </TabbedPage.ItemTemplate>
</TabbedPage>