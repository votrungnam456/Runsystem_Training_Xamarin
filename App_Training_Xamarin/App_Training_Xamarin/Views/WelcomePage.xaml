<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Training_Xamarin.Views.WelcomePage"
             x:Name="mainPage"
             Title="">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Cross Hotel"
                HorizontalOptions="CenterAndExpand" />
            <Image x:Name="imgWelcome"></Image>
            <Label Text="Click here to get more infomation about us"
                   HorizontalOptions="CenterAndExpand" ></Label>
            <Button Text="Click here" Clicked="Info_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>