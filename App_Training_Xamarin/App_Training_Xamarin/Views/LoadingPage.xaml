<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Training_Xamarin.Views.LoadingPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" VerticalOptions="Center">
            <ProgressBar WidthRequest="200" x:Name="progressBar" ProgressColor="Blue" HorizontalOptions="Center" VerticalOptions="Center"/>
            <Label Text="Loading...." TextColor="Blue" HorizontalOptions="Center" VerticalOptions="Center"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>