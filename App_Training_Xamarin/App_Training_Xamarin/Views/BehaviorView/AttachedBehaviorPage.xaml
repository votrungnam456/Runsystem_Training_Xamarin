<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Training_Xamarin.Views.BehaviorView.AttachedBehaviorPage"
             xmlns:local="clr-namespace:App_Training_Xamarin.Views.BehaviorView">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="NumericValidationStyle" TargetType="Entry">
                <Style.Setters>
                    <Setter Property="local:NumericValidationBehaviorXamarinFormStyle.AttachBehavior" Value="true" />
                </Style.Setters>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Attached Behavior" VerticalOptions="Center" FontSize="30"/>
            <Entry local:NumericValidationBehavior.AttachBehavior="True"/>
            
            
            <Entry local:NumericValidationBehavior.AttachBehavior="False"/>
            <Label Text="Xamarin.Form Behavior" VerticalOptions="Center" FontSize="30"/>
            <Entry>
                <Entry.Behaviors>
                    <local:NumberBehavior/>
                </Entry.Behaviors>
            </Entry>

            <!--<Entry Style="{StaticResource NumericValidationStyle}"></Entry>-->
        </StackLayout>
    </ContentPage.Content>
</ContentPage>